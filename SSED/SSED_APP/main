import tkinter as tk
from create_bash.gen_bash_lst_gui import open_generate_bash_gui  # Import the function

class MainGUI:
    def __init__(self, root):
        self.root = root
        self.root.title("Multi-Module Application")

        # Add button to open the generate bash GUI
        self.add_module_button("Generate Bash & .lst File", self.open_generate_bash_gui)

    def add_module_button(self, text, command):
        button = tk.Button(self.root, text=text, command=command)
        button.pack(pady=5)

    def open_generate_bash_gui(self):
        open_generate_bash_gui(self.root)  # Calls the function to open the new window

if __name__ == "__main__":
    root = tk.Tk()
    app = MainGUI(root)
    root.mainloop()
